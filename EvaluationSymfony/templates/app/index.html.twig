{% extends 'base.html.twig' %}

{% block title %}State of Contamination{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>State of Contamination</h1>

    {% for country in countries %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            
            <tr>
                <td>{{ country.id }}</td>
                <td>{{ country.name }}</td>
                <td>
                    <a href="{{ path('country_show', {'id': country.id}) }}" class="btn-primary">Detail</a>
                    <a href="{{ path('country_edit', {'id': country.id}) }}" class="btn-danger">Editer</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
            
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
