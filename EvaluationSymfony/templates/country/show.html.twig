{% extends 'base.html.twig' %}

{% block title %}#{{country.id}}.{{country.name}}{% endblock %}

{% block body %}
    <h1>{{country.name}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ country.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ country.name }}</td>
            </tr>
            <tr>
                <th>Stat</th>
                <td>Id</td>
                <td>Contamined</td>
                <td>Zombified</td>
                <td>Healed</td>
                <td>Date</td>
            </tr>
                {% for stat in stats %}
                {%  if stat.zombified > stat.healed %}
                <tr>
                <td>stat</td>
                <td>{{stat.id}}</td>
                
                <td>{{stat.contamined}}</td>
                <td class="text-danger">{{stat.zombified}}</td>
                <td>{{stat.healed}}</td>
                <td>{{stat.statDate|date("m/d/Y")}}</td>
                {% else %}
                <tr>
                    <td>stat</td>
                    <td>{{stat.id}}</td>

                    <td>{{stat.contamined}}</td>
                    <td>{{stat.zombified}}</td>
                    <td class="text-success">{{stat.healed}}</td>
                    <td>{{stat.statDate|date("m/d/Y")}}</td>
                    {% endif %}

                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('country_index') }}">back to list</a>

    <a href="{{ path('country_edit', {'id': country.id}) }}">edit</a>

    {{ include('country/_delete_form.html.twig') }}
{% endblock %}
