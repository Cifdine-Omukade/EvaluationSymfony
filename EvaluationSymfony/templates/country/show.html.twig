{% extends 'base.html.twig' %}

{% block title %}#{{country.id}}.{{country.name}}{% endblock %}

{% block body %}
    <h1>{{country.name}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ country.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ country.name }}</td>
            </tr>
            <tr>
                <th>Stat</th>
                {% for stat in stats %}
                <td>{{stat.id}}</td>
                <td>{{stat.name}}</td>
                <td>{{stat.contamination}}</td>
                <td>{{stat.zombified}}</td>
                <td>{{stat.healed}}</td>
                <td>{{stat.stat_date}}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('country_index') }}">back to list</a>

    <a href="{{ path('country_edit', {'id': country.id}) }}">edit</a>

    {{ include('country/_delete_form.html.twig') }}
{% endblock %}
