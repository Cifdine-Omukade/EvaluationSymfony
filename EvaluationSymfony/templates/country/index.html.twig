{% extends 'base.html.twig' %}

{% block title %}States{% endblock %}

{% block body %}
    <h1>States contaminated</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td>{{ country.id }}</td>
                <td>{{ country.name }}</td>
                <td>
                    <a href="{{ path('country_show', {'id': country.id}) }}"class="btn-primary">Detail</a>
                    <a href="{{ path('country_edit', {'id': country.id}) }}"class="btn-danger">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('country_new') }}"class="btn-danger">Ajouter un Pays</a>
{% endblock %}
